@model ABCRetailApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ABCRetailApp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: black;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h1 {
            color: black;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .product-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: black; /* Black color for title */
            margin-bottom: 10px;
        }

        .product-price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #007bff; /* Blue color for price */
            margin-bottom: 15px;
        }

        .product-image-container {
            width: 100%;
            max-width: 400px; /* Set a fixed width for all images */
            height: 300px; /* Set a fixed height for all images */
            overflow: hidden; /* Hide overflow to keep images within the container */
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .product-image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Ensure image covers the container */
            }

        .dl-horizontal dt {
            font-weight: bold;
            color: black;
        }

        .dl-horizontal dd {
            margin-bottom: 10px;
            color: deepskyblue;
        }

        .btn-secondary {
            background-color: black;
            border-color: black;
            color: #ffffff;
            margin-top: 20px;
        }

            .btn-secondary:hover {
                background-color: black;
                border-color: black;
                ;
                color: #ffffff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="container text-center">
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="mt-4">
            <div class="product-title">@Model.ProductName</div>
            <hr />
            <dl class="row dl-horizontal">
                <dt class="col-sm-3">Description</dt>
                <dt class="col-sm-9">@Model.Description</dt>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9 product-price">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <div class="product-image-container">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.ProductName" />
                        }
                    </div>
                </dd>
            </dl>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
